<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/title"
        android:text="Pcheduler"
        android:fontFamily="@font/nanumgothic"
        android:textColor="@color/ft_white"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/list_edt_task"
        android:fontFamily="@font/maruburi"
        android:textSize="15sp"
        android:hint="Insert Your Task"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.15"/>


    <ImageButton
        android:id="@+id/list_btn_add"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/icon_add"
        android:textColor="@color/ft_white"
        android:layout_marginTop="30dp"
        android:scaleType="centerCrop"
        android:padding="0dp"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintLeft_toLeftOf="@+id/list_edt_task"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_date"
        android:fontFamily="@font/maruburi"
        android:text="21.10.xx"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/list_edt_task"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/list_btn_add"
        app:layout_constraintHorizontal_bias="0.15"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/list_date"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/list_rcview"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/list_date"
        app:layout_constraintTop_toBottomOf="@id/list_date" />

</androidx.constraintlayout.widget.ConstraintLayout>