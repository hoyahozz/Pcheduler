<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/linen"
    android:layout_marginBottom="5dp"
    android:id="@+id/item_parent_main">

    <TextView
        android:id="@+id/item_parent_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016.05.05"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/maruburi"
        app:layout_constraintHorizontal_bias="0.05"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/item_parent_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:backgroundTint="@color/delta"
        android:layout_marginTop="3dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/item_parent_date"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/delta"/>
</androidx.constraintlayout.widget.ConstraintLayout>