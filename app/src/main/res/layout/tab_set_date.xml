<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/linen"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tab_txt_sdate"
        android:layout_marginTop="15dp"
        android:text="시작 날짜"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        android:fontFamily="@font/maruburi"
        android:textColor="@color/deep_pine"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <DatePicker
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:id="@+id/tab_picker_sdate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab_txt_sdate"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tab_txt_edate"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:text="종료 날짜"
        android:textSize="15sp"
        android:fontFamily="@font/maruburi"
        android:textColor="@color/deep_pine"
        app:layout_constraintTop_toBottomOf="@id/tab_picker_sdate"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <DatePicker
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:id="@+id/tab_picker_edate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab_txt_edate"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"/>

    <Button
        android:id="@+id/tab_set_date_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/transparency"
        android:text="확인"
        android:textColor="@color/bg_dark"
        />

</androidx.constraintlayout.widget.ConstraintLayout>